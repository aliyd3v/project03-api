                            </div>
                        </div>
                        <div class="w-[40%]">
                            <ul class="flex justify-around text-end text-white">
                                <h1>Блюды: </h1>
                                <br>
                                <ul>
                                    {{#if meals.length}}
                                    {{#each meals}}
                                    <li>{{meal.en_name}} * {{amount}} ----- ${{meal.price}}</li>
