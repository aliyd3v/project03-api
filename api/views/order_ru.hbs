        <div class="w-full">

            <!-- order flex -->

            <div class="bg-main-bg p-5 flex flex-col w-full h-20 rounded-xl mb-5">
                <div class="header">
                    <h1 class="text-[#ffc335] font-bold  text-2xl">Заказы</h1>
                    <div class="button-group">
                        {{#if isAll}}
                        <a href="/order">
                            <button class="status-button-active">Все ({{orders.totalDocs}})</button>
                        </a>
                        {{else}}
                        <a href="/order">
                            <button class="status-button">Все ({{orders.length}})</button>
                        </a>
                        {{/if}}
                        {{#if isWaitAccept}}
                        <a href="/orders/wait-accept">
                            <button class="status-button-active">Подождаюший-примите ({{waitAcceptOrders.totalDocs}})</button>
                        </a>
                        {{else}}
                        <a href="/orders/wait-accept">
                            <button class="status-button">Подождаюший-примите ({{waitAcceptOrders.length}})</button>
                        </a>
                        {{/if}}
                        {{#if isCooking}}
                        <a href="/orders/cooking">
                            <button class="status-button-active">Приготовление ({{cookingOrders.totalDocs}})</button>
                        </a>
                        {{else}}
                        <a href="/orders/cooking">
                            <button class="status-button">Приготовление ({{cookingOrders.length}})</button>
                        </a>
                        {{/if}}
                        {{#if isOnWay}}
                        <a href="/orders/on-way">
                            <button class="status-button-active">В-пути ({{onWayOrders.totalDocs}})</button>
                        </a>
                        {{else}}
                        <a href="/orders/on-way">
                            <button class="status-button">В-пути ({{onWayOrders.length}})</button>
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="w-full p-5 flex flex-col gap-5 bg-main-bg rounded-xl">



                <!-- order box -->

                {{!-- All Orders --}}
                {{#if isAll}}
                {{#if orders.docs.length}}
                {{#each orders.docs}}
                <div class="w-full bg-black p-6 rounded-xl">

                    <!-- order -->

                    <p class="text-white ">Идентификатор заказа <span class="text-text-color">#{{_id}}</span></p>
                    <div class="flex justify-between w-[90%]">
                        <div class="">
                            <div class="text-white ml-5 mt-3">
                                <p class="">Электронная почта: <span class="ml-3 text-xl">{{email}}</span>
                                </p>
                                <p class="">Телефон: <span class="ml-3 text-xl">{{phone}}</span> </p>
                                <p class="">Статус: <span class="ml-3 text-xl">{{#if (isEqual status 'Wait accept')}}Подождаюший примите{{/if}}{{#if (isEqual status 'Cooking')}}Приготовление{{/if}}{{#if (isEqual status 'On way')}}В пути{{/if}}</span></p>
                            </div>
                        </div>
                        <div class="w-[40%]">
                            <ul class="flex justify-around text-end text-white">
                                <h1>Блюды: </h1>
                                <br>
                                <ul>
                                    {{#if meals.length}}
                                    {{#each meals}}
                                    <li>{{meal.ru_name}} * {{amount}} ----- ${{meal.price}}</li>
                                    {{/each}}
                                    {{else}}
                                    <li>Пустой!</li>
                                    {{/if}}
                                </ul>
                            </ul>

                        </div>
                    </div>
                    <form action="/order/{{_id}}/change-status" method="post">
                        <div class="text-end mt-10">
                            <button type="submit" class="bg-green-600 text-white rounded py-2 px-5">{{#if (isEqual
                                status "Wait accept")}}Принимать{{/if}}{{#if (isEqual status
                                "Cooking")}}Приготовлено{{/if}}{{#if (isEqual status "On way")}}Доставлено{{/if}}</button>
                        </div>
                    </form>
                    <form action="/order/{{_id}}/dismiss" method="post">
                        <div class="text-end mt-2">
                            <button type="submit" class="bg-red-600 text-white rounded py-2 px-5">Отказать</button>
                        </div>
                    </form>
                </div>
                {{/each}}

                <!-- Pagination -->

                <div id="pagination" class="flex justify-center mt-5 gap-2">
                    {{#if orders.hasPrevPage}}<a href="/order/?page={{orders.prevPage}}"><button
                            class="px-3 py-2 rounded-lg bg-black text-white">Предыдущий</button></a>{{/if}}
                    <button class="px-3 py-2 rounded-lg bg-black text-[#ffc335]">{{orders.page}}</button>
                    {{!-- <a href=""><button class="px-3 py-2 rounded-lg bg-[#222] text-white">2</button></a> --}}
                    {{#if orders.hasNextPage}}<a href="/order/?page={{orders.nextPage}}"><button
                            class="px-3 py-2 rounded-lg bg-black text-white">Следующий</button></a>{{/if}}
                </div>
                {{else}}
                <p class="empty-message">Заказы пусты!</p>
                {{/if}}
                {{/if}}




                {{!-- Wait accept Orders --}}

                {{#if isWaitAccept}}
                {{#if waitAcceptOrders.docs.length}}
                {{#each waitAcceptOrders.docs}}
                <div class="w-full bg-black p-6 rounded-xl">

