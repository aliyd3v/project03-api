                    {{#if waitAcceptOrders.hasPrevPage}}<a href="/order/?page={{waitAcceptOrders.prevPage}}"><button
                            class="px-3 py-2 rounded-lg bg-[#222] text-white">Предыдущий</button></a>{{/if}}
                    <button class="px-3 py-2 rounded-lg bg-[#ffc335] text-white">{{waitAcceptOrders.page}}</button>
                    {{!-- <a href=""><button class="px-3 py-2 rounded-lg bg-[#222] text-white">2</button></a> --}}
                    {{#if waitAcceptOrders.hasNextPage}}<a href="/order/?page={{waitAcceptOrders.nextPage}}"><button
